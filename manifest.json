{
  "manifest_version": 3,
  "name": "WebHighlighter Knowledge Map",
  "version": "0.1.0",
  "description": "Highlight and annotate across the web, then visualize connections.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebHighlighter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
